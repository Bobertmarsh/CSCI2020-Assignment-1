<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
	   <Label text="Investment Amount" GridPane.columnIndex="1" GridPane.rowIndex="1" />
	   <Label text="Years" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	   <Label text="Annual Interest Rate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
	   <Label text="Future Value" GridPane.columnIndex="1" GridPane.rowIndex="4" />
	   <TextField fx:id="txtAmount" GridPane.columnIndex="2" GridPane.rowIndex="1" />
	   <TextField fx:id="txtYears" GridPane.columnIndex="2" GridPane.rowIndex="2" />
	   <TextField fx:id="txtInterest" GridPane.columnIndex="2" GridPane.rowIndex="3" />
	   <TextField fx:id="txtFuture" GridPane.columnIndex="2" GridPane.rowIndex="4" />
	   <Button fx:id="btnCalculate" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleButton" text="Calculate" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
   </children>
